<!DOCTYPE HTML>
<html>
	<head>
        <%- include('./partials/head'); %>
    </head>
	<body >
        <header>
            <%- include('./partials/header'); %>
        </header>
        <style>
            .i-container-items{
                background-color: rgb(254, 255, 255); 
                box-shadow: 1px 2px 15px 0px rgba(89,87,87,0.85);
                margin: 10px;
                margin-left:20px; 
                width: 700px; 
                height: 670px;
                border-radius: 30px;
                min-height: xxx;
                overflow: hidden;
                display: inline-block;
            }
            .i-container-items2{
                background-color: rgb(254, 255, 255);             
                margin: 30px; 
                width: 500px; 
                margin-left:70px; 
                min-height: xxx;
                overflow: hidden;
                display: inline-block;
            }
            .table-items{
                margin: 10px; 
                
                width: 480px; 
                border-radius: 22px;
                border: 3px solid rgb(17, 51, 201);
                min-height: xxx;
                overflow: hidden;
                display: inline-block;
            }
            table{
               width:480px;
               border-collapse: collapse;
            }
            table td, table th {
            border: 1px solid rgb(197, 198, 202);
            }
            table tr:first-child th {
            border-top: 0;
            }
            table tr:last-child td {
            border-bottom: 0;
            }
            table tr td:first-child,
            table tr th:first-child {
            border-left: 0;
            }
            table tr td:last-child,
            table tr th:last-child {
            border-right: 1px solid rgb(197, 198, 202);
            }
            th, td {
                padding: 20px;
                text-align: center;
                }
            .table-header{
                background-color: rgb(65, 98, 247);
            }
            form {
                width: 300px;
                margin: 0 auto;
                text-align: center;
                padding-top: 50px;
                }
            input#number {
                text-align: center;
                border-radius: 10px;
                border : 2px solid rgb(65, 98, 247);
                margin: 0px;
                width: 40px;
                height: 40px;
                }
            input[type=number]::-webkit-inner-spin-button,
            input[type=number]::-webkit-outer-spin-button {
                    -webkit-appearance: none;
                    margin: 10;
                }
            .slider {
                position: relative;
                width:87%;
                
                overflow: hidden;
                margin-left:28px;
            }
            .images {
                display: flex;
                width: 100%;
                margin-left: 20px;
            }
            .images img {
                height: 590px;
                width: 610px;
                transition: all 0.15s ease;
            }
            .images input {
                display: none;
            }
            .dots {
                display: flex;
                justify-content: center;
                margin: 5px;
                margin-left: 45px;
            }
            .dots label {
                height: 20px;
                width: 20px;
                border-radius: 50%;
                border: solid rgb(17, 51, 201) 3px;
                cursor: pointer;
                transition: all 0.15s ease;
                margin-left: 10px;
            }
            .dots label:hover {background: rgb(65, 98, 247);}
            #img1:checked ~ .m1 {
                margin-left: 100;
            }
            #img2:checked ~ .m2 {
                margin-left: -95%;
            }
            #img3:checked ~ .m3 {
                margin-left: -192%;
            }
            #img4:checked ~ .m4 {
                margin-left: -290%;
            }
            .back-button{
                padding-left:25px;
                padding-right:25px;
                margin-left:80px;
                margin-top:20px;
                text-align: center;
                border-radius:15px ;   
                background-color: rgba(45,121,197,255); 
            }
        </style>
        <a href="/"><button class="btn btn-primary back-button">Back</button></a>
                
       
		<main  style="margin-left: 50px;">
            <div class="d-flex flex-wrap">
                <div class="i-container-items" ><!-- style="margin-right: 120px;" -->
                    <div class="slider">
                        <div class="images">
                            <input type="radio" name="slide" id="img1" checked>
                            <input type="radio" name="slide" id="img2">
                            <input type="radio" name="slide" id="img3">
                            <input type="radio" name="slide" id="img4">
                            
                            <img src=<%=itemData.images[0] %> class="m1" alt="fecthing img">
                            <img src=<%=itemData.images[1] %> class="m2" alt="fecthing img">
                            <img src=<%=itemData.images[2] %> class="m3" alt="fecthing img">
                            <img src=<%=itemData.images[3] %> class="m4" alt="fecthing img">
                        </div>
                        <div class="dots">
                            <label for="img1"></label>
                            <label for="img2"></label>
                            <label for="img3"></label>
                            <label for="img4"></label>
                        </div>
                    </div>
                </div>  
                <div class="i-container-items2">
                    <div >
                        <p class="card-text"><b>Name: </b><%=itemData.name %></p>
                        <p  class="card-text"><b>Description: </b></p>
                        </p align="justify"><%=itemData.desc %></p>
                        <p class="card-text mb-0"><b>Price: </b>Php. <%=itemData.price %></p><br>
                        <p class="card-text mb-0"><b>Total Sales: </b><%=itemData.total_sales %></p>
                    </div> 
                    <div>
                        <div style="margin-bottom: 10px; margin-right: 30px ">
                            <form  method="POST" action="/update/item_id=<%=item_id%>">
                                <button type="button" class="btn" onclick="decreaseValue()"><i class="fa fa-minus"></i></button>
                                <input   id="number" type="number" aria-label="Search" name="quantity" value="0" required>
                                <button type="button" class="btn" onclick="increaseValue()"><i class="fa fa-plus"></i></button>    
                                <button class="btn btn-primary" 
                                style="background-color: rgba(45,121,197,255); 
                                       border-radius:15px ;
                                " 
                                type="submit">Add to sales</a></button>
                            </form>
                        </div>
                        <div class="table-items">
                            <table class="table-striped">
                                <thead>
                                    <tr >
                                        <th >#</th>
                                        <th>Date</th>
                                        <th >Quantity</th>
                                    </tr>
                                </thead>
                                <tr>
                                    <% for(things of sales){%>
                                    <td ><%=things.id %></td>
                                    <td><%=things.data().date %></td>
                                    <td><%=things.data().quan %></td>
                                </tr>
                                <% } %>  
                            </table>
                        </div>
                    </div>
                </div>                        
            </div>
        </main>


        


        

    <script>
        function increaseValue() {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            value++;
            document.getElementById('number').value = value;
            }

            function decreaseValue() {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            value < 1 ? value = 1 : '';
            value--;
            document.getElementById('number').value = value;
            }
    </script>
    
	</body>
</html>
